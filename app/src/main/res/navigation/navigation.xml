<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation.xml"
            app:startDestination="@+id/tasksListFragment"
            android:label="To Do">

    <fragment
            tools:layout="@layout/tasks_list_fragment"
            android:id="@+id/tasksListFragment"
            android:name="com.cyrilfind.kodo.tasklist.TaskListFragment"
            android:label="To Do">
        <action
                android:id="@+id/action_tasksListFragment_to_settings"
                app:destination="@id/settings"/>
        <action
                android:id="@+id/openTask"
                app:destination="@id/taskFragment"/>
    </fragment>
    <fragment
            android:id="@+id/taskFragment"
            android:name="com.cyrilfind.kodo.task.TaskFragment"
            tools:layout="@layout/task_fragment"
            android:label="TaskFragment">
        <argument
                android:name="task"
                app:argType="com.cyrilfind.kodo.model.Task"/>
    </fragment>
    <fragment
            tools:layout="@layout/settings_fragment"
            android:id="@+id/settings"
            android:name="com.cyrilfind.kodo.SettingsFragment"
            android:label="Settings"/>
</navigation>